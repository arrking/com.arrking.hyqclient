<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/browser_layout" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/browser_topbar" style="@style/top_bar_layout">
        <ImageView android:id="@id/brwose_top_return_Button" android:src="@drawable/back_icon" android:layout_alignParentLeft="true" style="@style/top_bar_button" />
        <TextView android:id="@id/browse_top_TextView" android:text="@string/info_detail" android:layout_centerHorizontal="true" style="@style/top_bar_text" />
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/browser_bottom_layout" android:background="@drawable/info_detail_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/share_ll" android:clickable="true" style="@style/create_btn_bg">
            <ImageView android:id="@id/browser_share_Button" android:background="@drawable/share_info_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" />
            <TextView android:textSize="14.0sp" android:textColor="#ff555b6d" android:id="@id/share_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="分享" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/comment_layout" android:visibility="gone" android:clickable="true" style="@style/create_btn_bg">
            <ImageView android:id="@id/browser_comment_Button" android:background="@drawable/comment_new_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" />
            <TextView android:textSize="14.0sp" android:textColor="#ff555b6d" android:id="@id/comment_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="评论" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/refresh_ll" android:clickable="true" style="@style/create_btn_bg">
            <ImageView android:id="@id/browser_refresh_Button" android:background="@drawable/refresh_info_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" />
            <TextView android:textSize="14.0sp" android:textColor="#ff555b6d" android:id="@id/comment_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="刷新" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/wx_ll" android:visibility="gone" android:clickable="true" style="@style/create_btn_bg">
            <ImageView android:id="@id/browser_weixin_Button" android:background="@drawable/weixin_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" />
            <TextView android:textSize="14.0sp" android:textColor="#ff555b6d" android:id="@id/wx_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/weixin_string" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@id/webview_relativelayout" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/browser_bottom_layout" android:layout_below="@id/browser_topbar">
        <WebView android:id="@id/webview" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </RelativeLayout>
</RelativeLayout>