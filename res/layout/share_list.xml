<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/share_relativeLayout" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="center" android:id="@id/share_top_bar" style="@style/top_bar_layout">
        <ImageView android:id="@id/share_top_back_Button" android:src="@drawable/back_icon" android:layout_alignParentLeft="true" style="@style/top_bar_button" />
        <TextView android:id="@id/share_top_TextView" android:text="@string/share_list_title" android:layout_alignParentLeft="true" style="@style/top_bar_text" />
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/share_list_linearlayout" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/share_top_bar">
        <ListView android:id="@id/share_listview" android:layout_width="fill_parent" android:layout_height="fill_parent" android:cacheColorHint="#00000000" android:divider="@null" />
    </LinearLayout>
</RelativeLayout>