<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="rg_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10dp</item>
        <item name="android:paddingTop">8dp</item>        
        <item name="android:background">@drawable/tabhost_bg_selector</item>
        <item name="android:textColor">#a8aeb5</item>
        <item name="android:button">@null</item>
    </style>
    <style name="dash_list_item_title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/dash_list_item_title</item>
    </style>
    <style name="dash_list_item_desc">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/dash_list_item_desc</item>
    </style>
    <!-- Avatars ImageView style -->
    <style name="AvatarImageView">
        <item name="android:layout_width">@dimen/image_view_big_avatar_layout_width</item>
        <item name="android:layout_height">@dimen/image_view_big_avatar_layout_height</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/placeholder_user</item>
    </style>
    <!-- contacts list -->
    <style name="top_bar_layout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/top_bar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
